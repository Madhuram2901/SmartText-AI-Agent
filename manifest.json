{
    "manifest_version": 3,
    "name": "Tone Converter",
    "version": "1.0",
    "permissions": ["activeTab", "contextMenus", "storage"],
    "background": { "service_worker": "background.js" },
    "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content.js"] }],
    "action": { "default_popup": "popup.html" }
}